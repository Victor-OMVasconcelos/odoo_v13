<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="manage_solicitations_form" model="ir.ui.view">
        <field name="name">manage.solicitations.form</field>
        <field name="model">manage.solicitations</field>
        <field name="arch" type="xml">
            <form string="Solicitations" create="0" edit="0">
                <header>
                    <button name="solicitation_granted" type="object" class="oe_highlight" string="Grant" attrs="{'invisible': [('situation', '!=', 'avaluating')]}"/>
                    <button name="solicitation_dismissed" type="object" string="Dismiss" attrs="{'invisible': [('situation', '!=', 'avaluating')]}"/>
                    <field name="situation" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <group>
                        <field name="production_line"/>
                        <field name="date"/>
                        <field name="solicitant"/>
                        <field name="altered_parameter"/>
                        <field name="new_value"/>
                        <field name="motive"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="manage_solicitations_tree" model="ir.ui.view">
        <field name="name">manage.solicitations.tree</field>
        <field name="model">manage.solicitations</field>
        <field name="arch" type="xml">
            <tree string="Solicitations" default_order="situation" create="0">
                <field name="production_line"/>
                <field name="date"/>
                <field name="solicitant"/>
                <field name="motive"/>
            </tree>
        </field>
    </record>

</odoo>

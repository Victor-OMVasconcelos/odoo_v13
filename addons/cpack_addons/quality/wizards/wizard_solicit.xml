<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_solicit_view" model="ir.ui.view">
        <field name="name">wizard.solicit.form</field>
        <field name="model">wizard.solicit</field>
        <field name="arch" type="xml">
            <form string="Solicit alteration">
                <group>
                    <field name="process" readonly="1"/>
                    <field name="production_line" readonly="1"/>
                    <field name="diameter" readonly="1"/>
                    <field name="solicitant" readonly="1"/>
                    <field name="date" readonly="1"/>
                    <field name="altered_parameter"/>
                    <field name="new_value"/>
                    <field name="motive"/>
                </group>
                <footer>
                    <button string="Send to analysis" type="object" name="send_to_analysis" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

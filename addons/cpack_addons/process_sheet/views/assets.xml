<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend" inherit_id="web.assets_backend" name="Hide Breadcrumb for Arquive">
        <xpath expr="." position="inside">
            <style>
                .no-breadcrumb .o_control_panel .breadcrumb {
                    display: none !important;
                }
            </style>
        </xpath>
    </template>

</odoo>
